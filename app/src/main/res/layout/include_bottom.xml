<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    >

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/cardview"
        android:src="@drawable/cardview13dp"
        android:layout_centerVertical="true"
        android:layout_margin="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"

        android:text="2351"
        android:textSize="10sp"
        android:layout_toRightOf="@id/cardview"
        android:layout_centerVertical="true"
        android:layout_margin="2dp" />

    <ImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:id="@+id/cardcomment"
        android:src="@drawable/cardcomment13dp"
        android:layout_margin="2dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textComment"
        android:text="21"
        android:textSize="10sp"
        android:layout_toRightOf="@id/cardcomment"
        android:layout_centerVertical="true"
        android:layout_margin="2dp" />

    <ImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:id="@+id/cardlike"
        android:src="@drawable/cardlove13dp"
        android:layout_margin="2dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/textComment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textLike"
        android:text="1234"
        android:textSize="10sp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@id/cardlike"
        android:layout_centerVertical="true"
        android:layout_margin="2dp" />
</RelativeLayout>